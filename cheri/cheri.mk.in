cheri_subproject_deps = \

cheri_insn_list = $(shell grep ^DECLARE_INSN $(1) | sed 's/DECLARE_INSN(\(.*\),.*,.*)/\1/')
get_opcode = $(shell grep ^DECLARE_INSN.*\\\<$(2)\\\> $(1) | sed 's/DECLARE_INSN(.*,\(.*\),.*)/\1/')

cheri_hdrs = \
	cheri.h \
	cheri_trap.h \
	cheri_insn_template.h \

cheri_gen_hdrs = \
	cheri_insn_list.h \

cheri_precompiled_hdrs = \
	insn_template.h \

cheri_srcs = \
	dummy_cheri.cc \
	cheri.cc \
	$(cheri_gen_srcs)\

